{
  "compilerOptions": {
    "target": "ES2021",                     
    "module": "commonjs",                   
    "rootDir": "./src",                     
    "outDir": "./dist",                     

    "strict": true,                         
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "skipLibCheck": true,                   

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
